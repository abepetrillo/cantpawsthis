<!DOCTYPE html>
<html>
  <head>
    <title>Cantpawsthis</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <span class="notice"><%= notice %></span>
    <span class="alert"><%= alert %></span>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <% if current_user %>
        <a href="/posts">Posts</a>
        <% end %>
      </nav>
      <a class="social" href="https://www.instagram.com/cantpawsthis/" target="_blank"><i class='fa fa-instagram'></i></a>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
    footer
    </footer>
  </body>
</html>
